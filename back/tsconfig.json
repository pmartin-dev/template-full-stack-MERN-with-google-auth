{
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "compilerOptions": {
      "outDir": "dist",
      "target": "es6",
      "lib": ["es6"],
      "strict": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "rootDir": "src"
    },
}
